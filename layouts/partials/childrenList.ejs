<div class="children-container" data-controller="children-list">
  <% if (locals.kicker) { %>
    <h3>
    <% if (locals.link) { %><a href="<%= link %>"><% } %>
    <%= kicker %>
    <% if (locals.link) { %></a><% } %>
    </h3>
  <% } %>
  <div class="children-view hide" data-children-list-target="expandable">
    <ul class="children"  data-children-list-target="children">
      <% children.forEach((link) => { %>
        <% const type = link.resourceType %>
        <li class="type-<%= type %>">
          <%
          const iconMap = {
            document: 'file-o',
            spreadsheet: 'table',
            'text/html': 'file-o',
            folder: 'folder',
            presentation: 'clone',
            image: 'picture-o',
            video: 'video-camera',
            pdf: 'file-pdf-o'
          }
          const iconName = iconMap[type] || 'external-link'
          const className = `fa-${iconName}`
          %>
          <i class="fa foldericon <%= className %>" aria-hidden="true"></i>
          <a class="content-link" href="<%- link.url %>" ><%= link.name %></a>
        </li>
      <% }) %>
    </ul>
  </div>
  <button data-action="click->children-list#toggle" data-children-list-target="toggle" class="seeMore-button">
    See more
  </button>
</div>
