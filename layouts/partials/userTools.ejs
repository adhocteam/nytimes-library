<div class="user-tools" data-controller="user-tools" data-action="mouseenter->user-tools#handleMouseEnter">
  <div id="user-profile">
    <a class="btn-user-whole" href="#me">
      <button class="button btn-user-initial"></button>
      <span class="user-fullname"></span>

      <i class="fa fa-angle-down" aria-hidden="true"></i>
    </a>
  </div>

  <div id="me" class="overlay">
  	<a class="cancel" href="#"></a>
  	<div class="popup" data-user-tools-target="popup">
      <a class="close" href="#">&times;</a>
      <i class="fa fa-spinner fa-pulse" aria-hidden="true" data-user-tools-target="spinner"></i>
    </div>

	</div>
</div>
