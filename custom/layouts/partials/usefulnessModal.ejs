<div id="usefulness-feedback" data-controller="usefulness" data-usefulness-document-id=<%= id %>>
  Was this helpful?
  <button id="usefulYes" data-usefulness-launch-modal-param="useful-yes" data-action="click->usefulness#handleVote" class="button">
    <i class="fa fa-thumbs-up" aria-hidden="true"></i>Yes</button>
  <button id="usefulNo" data-usefulness-launch-modal-param="useful-no" data-action="click->usefulness#handleVote" class="button">
    <i class="fa fa-thumbs-down" aria-hidden="true"></i>No</button>
  
  <div class="modal" id="useful-yes">
    <div class="wrapper">
      <section class="modalBody">
        <div class="modalGraphic"></div>
        <div class="modalContent">
          <header>
            What is the reason for your feedback?
          </header>
          <div><input name="reason" value="Used for growth" id="yes-reason-1" type="radio" data-usefulness-target="reason" /><label for="yes-reason-1">Used for growth</label></div>
          <div><input name="reason" value="Used for training" id="yes-reason-2" type="radio" data-usefulness-target="reason"/><label for="yes-reason-2">Used for training</label></div>
          <div><input name="reason" value="Other" id="yes-reason-3" type="radio" data-usefulness-target="reason"/><label for="yes-reason-3">Other</label></div>
          <footer>
            <button data-action="click->usefulness#handleCancel" type="button" class="button">Cancel</button>
            <button data-action="click->usefulness#handleSubmit" type="button" class="button button-accent" value="yes">Submit</button>
          </footer>
        </div>
      </section>
    </div>
    <button class="modal-close" data-action="click->usefulness#handleCancel" type="button">Close</button>
  </div>

  <div class="modal" id="useful-no">
    <div class="wrapper">
      <section class="modalBody">
        <div class="modalGraphic blocky-lookng-down"></div>
        <div class="modalContent">
          <header>
            What is the reason for your feedback?
          </header>
          <div><input name="reason" value="Not relevant" id="no-reason-1" type="radio" data-usefulness-target="reason"/><label for="no-reason-1">Not relevant</label></div>
          <div><input name="reason" value="Hard to understand" id="no-reason-2" type="radio" data-usefulness-target="reason"/><label for="no-reason-2">Hard to understand</label></div>
          <div><input name="reason" value="Incorrect information" id="no-reason-3" type="radio" data-usefulness-target="reason"/><label for="no-reason-3">Incorrect information</label></div>
          <div><input name="reason" value="Other" id="no-reason-4" type="radio" data-usefulness-target="reason"/><label for="no-reason-4">Other</label></div>
          <footer>
            <button data-action="click->usefulness#handleCancel" class="button">Cancel</button>
            <button data-action="click->usefulness#handleSubmit" class="button button-accent" value="no">Submit</button>
        </div>
      </section>
    </div>
    <button class="modal-close" data-action="click->usefulness#handleCancel" type="button">Close</button>
  </div>
</div>